-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id=>'ratings_form', :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, params[:"#{rating}"]? true : false
  = submit_tag 'Refresh', :id=>'ratings_submit'

%table#movies
  %thead
    %tr
      -# for class, I used: https://til.hashrocket.com/posts/59955464da-conditional-class-selectors-in-haml
      -# for link_to (linking to a class is a thing in Ruby), I used: https://stackoverflow.com/questions/14658054/rails-and-haml-how-to-add-id-and-class-selectors-to-link-to-helper/14658081
      %th{:id =>'title_header', :class =>(("title".eql? params[:sort]) ? "hilite" : "nope")}=link_to 'Movie Title', movies_path(:sort => 'title')
      %th{:id =>'rating_header', :class =>(("rating".eql? params[:sort]) ? "hilite" : "nope")}=link_to 'Rating', movies_path(:sort => 'rating')
      %th{:id =>'release_date_header', :class =>(("release_date".eql? params[:sort]) ? "hilite" : "nope")}=link_to 'Release Date', movies_path(:sort => 'release_date')
      %th{:id =>'info_header', :class =>(("description".eql? params[:sort]) ? "hilite" : "nope")}=link_to 'More Info', movies_path(:sort => 'description')
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
